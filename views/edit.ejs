    <header class="blog-header py-3 top-fixed"> 
            <div class="row flex-nowrap justify-content-between align-items-center">
            <div class="col-4 pt-1">
                <a class="text-muted" href="/dashboard">Ana Sayfa</a>
            </div>
            <div class="col-4 d-flex justify-content-end align-items-center">
                <a class="btn btn-sm btn-outline-secondary" href="/users/logout">Çıkış</a>
            </div>
            </div>
    </header>
 <div class="cotainer margin:50px;">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">Güncelleme Sayfası</div>
                    <div class="card-body">
                        <form action="/dashboard/edit/<%=kullanicilar._id%> " method="POST">
                            <!--  ad   -->
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">Ad</label>
                                <div class="col-md-6">
                                    <input type="text" id="ad" class="form-control" name="name" required autofocus placeholder="Ad" value="<%=kullanicilar.name%>">
                                </div>
                            </div>
                        
                            <!--  email   -->
                            <div class="form-group row">
                                <label for="email_address" class="col-md-4 col-form-label text-md-right">E Mail</label>
                                <div class="col-md-6">
                                    <input type="email" id="email" class="form-control" name="email" required autofocus placeholder="E Mail" value="<%=kullanicilar.email%>">
                                </div>
                            </div>
                            
                            <!--  sifre   -->
                            <div class="form-group row">
                                <label for="password" class="col-md-4 col-form-label text-md-right" >Şifre</label>
                                <div class="col-md-6">
                                    <input type="password" id="sifre" class="form-control" name="password" required placeholder="Şifre" value="<%=kullanicilar.password%>">
                                </div>
                            </div>
                            <div class="col-md-6 offset-md-4">
                                <input type="submit"  class="btn btn-primary" value="Güncelle">
                                <a href="/dashboard" class="btn btn-danger">İptal Et</a>
                            </div>
                        </form>
                </div>
            </div>
        </div> 
</div>